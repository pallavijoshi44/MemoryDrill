<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="5dp" />
            <stroke android:width="1dip" android:color="#794b87" />
            <gradient android:angle="-90" android:startColor="#794b87" android:endColor="#794b87"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="5dp" />
            <stroke android:width="1dip" android:color="#a372b2" />
            <solid android:color="#a372b2"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="5dp" />
            <stroke android:width="1dip" android:color="#a372a8" />
            <gradient android:angle="-90" android:startColor="#a372a8" android:endColor="#a372a8" />
        </shape>
    </item>
</selector>